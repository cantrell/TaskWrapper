<?xml version="1.0" encoding="utf-8"?>
<mx:WindowedApplication xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" width="800" height="600" applicationComplete="onApplicationComplete();" xmlns:local="*">
	<mx:Script>
		<![CDATA[
			import flash.events.Event;
			private function onApplicationComplete():void
			{
				browser.load("http://mail.google.com");
				this.nativeWindow.addEventListener(Event.CLOSING, onClosing);
				this.instructionsDrawer.open();
				this.instructionHTML.htmlLoader.navigateInSystemBrowser = true;
			}
			
			private function onClosing(e:Event):void
			{
				if (NativeApplication.nativeApplication.openedWindows.length > 1)
				{
					e.preventDefault();
					this.visible = false;
				}
			}
			
		]]>
	</mx:Script>
	<local:Browser id="browser" width="100%" height="100%"/>
	<local:TopDrawer id="instructionsDrawer" width="320" height="180">
		<mx:VBox width="100%" height="100%" horizontalAlign="center" verticalAlign="middle" paddingBottom="4">
			<mx:HTML id="instructionHTML" width="100%" height="90%" location="instructions.html" paintsDefaultBackground="false" backgroundAlpha="0" verticalScrollPolicy="off" horizontalScrollPolicy="off"/>
			<mx:Button label="Got It" click="this.instructionsDrawer.close();"/>
		</mx:VBox>
	</local:TopDrawer>
</mx:WindowedApplication>